# ===========================================
# Cloud-Native API Analytics Pipeline
# Environment Configuration
# ===========================================
# Rename this file to .env and fill in your values

# -------------------------------------------
# Snowflake Configuration
# -------------------------------------------
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=ANALYTICS_DB
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=LOADER_ROLE

# -------------------------------------------
# AWS Configuration (for S3 staging)
# -------------------------------------------
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-staging-bucket

# -------------------------------------------
# Azure Configuration (alternative to AWS)
# -------------------------------------------
# AZURE_STORAGE_ACCOUNT=your_storage_account
# AZURE_STORAGE_KEY=your_storage_key
# AZURE_CONTAINER_NAME=staging

# -------------------------------------------
# API Source 1: OAuth2 API
# -------------------------------------------
API1_CLIENT_ID=your_client_id
API1_CLIENT_SECRET=your_client_secret
API1_TOKEN_URL=https://api.example.com/oauth/token
API1_BASE_URL=https://api.example.com/v1

# -------------------------------------------
# API Source 2: API Key API
# -------------------------------------------
API2_API_KEY=your_api_key
API2_BASE_URL=https://api.another-example.com/v2

# -------------------------------------------
# API Source 3: Optional SOAP API
# -------------------------------------------
# SOAP_API_WSDL_URL=https://soap.example.com/service?wsdl
# SOAP_API_USERNAME=your_username
# SOAP_API_PASSWORD=your_password

# -------------------------------------------
# Airflow Configuration
# -------------------------------------------
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here

# -------------------------------------------
# Logging & Monitoring
# -------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -------------------------------------------
# Alerting (Optional)
# -------------------------------------------
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# PAGERDUTY_API_KEY=your_pagerduty_key
# ALERT_EMAIL=alerts@yourcompany.com

