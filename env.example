# ===========================================
# Cloud-Native API Analytics Pipeline
# Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# AWS Configuration
# -------------------------------------------
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=motorola-api-snowflake-staging-<unique>

# -------------------------------------------
# Snowflake Configuration
# -------------------------------------------
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=PIPELINE_WH
SNOWFLAKE_DATABASE=VIDEO_ANALYTICS
SNOWFLAKE_SCHEMA=RAW

# -------------------------------------------
# API A Configuration (OAuth2)
# -------------------------------------------
API_A_BASE_URL=https://api.example.com/v1
API_A_OAUTH_CLIENT_ID=your_client_id
API_A_OAUTH_CLIENT_SECRET=your_client_secret
API_A_OAUTH_TOKEN_URL=https://api.example.com/oauth/token

# -------------------------------------------
# API B Configuration (API Key)
# -------------------------------------------
API_B_BASE_URL=https://api.another-example.com/v2
API_B_API_KEY=your_api_key

# -------------------------------------------
# Pipeline Configuration
# -------------------------------------------
LOG_LEVEL=INFO
